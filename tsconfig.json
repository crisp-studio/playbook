{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "lib": ["dom", "es2017"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "importHelpers": true,
      "noEmit": true,
      "skipLibCheck": true
    }
  }